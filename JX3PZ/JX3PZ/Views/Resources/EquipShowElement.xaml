<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:JX3PZ.Views"
                    xmlns:hc="https://handyorg.github.io/handycontrol"
                    xmlns:userControls="clr-namespace:J3PZ.Views.UserControls">

    <!--  装备_词条数据模板  -->
    <DataTemplate x:Key="DataTemplate.EquipAttribute">
        <views:AttributeEntryView/>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplate.EquipStrengthAttribute">
        <views:FormattedEntry/>
    </DataTemplate>

    <!--  装备显示界面词条上的小图标（五行石，五彩石，附魔）  -->
    <Style x:Key="Style.EquipAttributeEntryIcon" TargetType="Image">
        <Style.Setters>
            <Setter Property="Height" Value="18" />
            <Setter Property="Width" Value="18" />
        </Style.Setters>
    </Style>

    <!--  装备_五行石属性数据模板（带有小图标）  -->
    <DataTemplate x:Key="DataTemplate.DiamondAttribute">
        <userControls:DiamondAttributeItemView/>
    </DataTemplate>

</ResourceDictionary>