<UserControl x:Class="JX3PZ.Views.AttributeEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JX3PZ.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d">
    <TextBox Text="{Binding Desc, Mode=OneWay}"
             Style="{StaticResource Style.TextBlockBox}"
             Foreground="{Binding Color, Mode=OneWay, Converter={StaticResource StringToColorConverter}}"
             TextWrapping="Wrap" MaxWidth="400">
    </TextBox>
</UserControl>